    <script>
      /*  영화 API */
      let today = new Date();
      let day =
        String(today.getFullYear()) +
        ("0" + (1 + today.getMonth())).slice(-2) +
        ("0" + (today.getDate() - 1)).slice(-2);
      function promiseAjax(url) {
        return new Promise(function (resolve, reject) {
          //비동기함수 호출
          let xhr = new XMLHttpRequest();
          xhr.onload = function () {
            resolve(xhr.response);
          };
          xhr.onerror = function () {
            reject(xhr.status);
          };
          xhr.open("get", url);
          xhr.send();
        });
      }
      window.onload = function () {
        //3.요청연결
        let url =
          "http://kobis.or.kr/kobisopenapi/webservice/rest/boxoffice/searchDailyBoxOfficeList.json?key=f5eef3421c602c6cb7ea224104795888&targetDt=" +
          day;
        promiseAjax(url)
          .then((res) => JSON.parse(res))
          .then((res) => {
            res = res.boxOfficeResult.dailyBoxOfficeList;
            for (let i = 0; i < 5; i++) {
              document.getElementById("post1").innerHTML += `<div>${
                i + 1 + "위 " + res[i].movieNm
              }</div>`;
            }
          });
      };
    </script>
    <script>
      //등록패치
      btnAdd.addEventListener("click", function (ev) {
        ev.preventDefault();
        let data = {
          content: content.value,
          home_no: "<%=home[0].no%>",
          nickname: "aa",
        };
        fetch("/post", {
          method: "post",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((res) => res.json())
          .then((res) => {
            alert("등록완료");
          });
      });
      //단건조회 패치
      document.querySelector(".parent").addEventListener("click",function(ev){
         ev.preventDefault();
         let no = ev.target.getAttribute("data-id")
         ev.target.nodeName = "BUTTON"
        let data = {
          no : no};
        fetch(`/post/one/${no}`)
       .then((res) => res.json())
       .then((res)=>{content.value=res.content;
          document.querySelector("#up").value = res.no})
        }) 

        //수정패치
        btnAp.addEventListener("click",function(ev){
          ev.preventDefault();
           let no = document.querySelector("#up").value
          data = {
            no:no,
            content : content.value,            
          }
          fetch(`/post/one/${no}`, {
          method: "put",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((res)=>res.json())  
          .then((res) => {content.value=res.content;
          no = res.no})
          .then((res) => {
            alert("수정완료");
          });
        })
        //삭제
        document.querySelector("#commentlist").addEventListener("click",function(ev){
         ev.preventDefault();
         if(ev.target.id == "del"){
          let no = ev.target.getAttribute("data-id")
          fetch(`/post/one/${no}`, { 
          method: "delete" })
          .then((res) =>  res.json())
          .then((res) => {alert("삭제완료")
        })
      }
      });
        //로그아웃
      btnLogout.addEventListener("click", function (ev) {
        ev.preventDefault();
        fetch("/", {
          method: "post",
          headers: {
            "Content-Type": "application/json",
          },
        }).then(() => {
          alert("로그아웃");
          location.href = "/login";
        });
      });
    </script>
